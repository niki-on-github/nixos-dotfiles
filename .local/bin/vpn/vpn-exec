#!/usr/bin/env bash

usage() {
    cat <<EOF
'`basename $0`' is a script to start an application in vpn network namespace

Dependecies:
    - vopono

Usage: `basename $0` [MODE] [CMD_ARGS]

MODE:
    - fg: run application in inforeground
    - bg: run application in background

CMD_ARGS:
    e.g. firefox -P
EOF
    exit $1
}


OPENVPN_CONFIG_DIR="$HOME/Sync/VPN/AirVPN"
LOCKED_OPENVPN_CONFIGS=$(lslocks -n -o PATH 2>/dev/null | grep "^$OPNECT_CONFIG_DIR")
OPENVPN_CONFIG=$(find $OPENVPN_CONFIG_DIR -iname "*.ovpn" | grep -v "$LOCKED_OPENVPN_CONFIGS" | sort -R | tail -1)
INTERFACE=$(ip route | awk '/default/ { print $5 }')

[ -z "$SUDO_ASKPASS" ] && notify-send "Warning" "Environment variable \$SUDO_ASKPASS is not set!"

mode="$1"

[ -z "$mode" ] && usage 1
[ "$mode" = "-h" ] && usage 0
[ "$mode" = "help" ] && usage 0

shift
cmd="$@"

[ -z "$cmd" ] && usage 1

echo "mode: $mode"
echo "cmd: $cmd"

if [ -f $HOME/.cargo/bin/vopono ]; then
    _VOPONO=$HOME/.cargo/bin/vopono
else
    _VOPONO=vopono
fi

if [ "$mode" = "fg" ]; then
    flock -x $OPENVPN_CONFIG -c "$_VOPONO \
            exec \
            --disable-ipv6 \
            --interface $INTERFACE \
            --custom $OPENVPN_CONFIG \
            --protocol openvpn \
            --hosts \"10.0.1.10 jdownloader.server01.lan\",\"10.0.1.10 vaultwarden.server01.lan\",\"10.0.1.10 webdav.server01.lan\",\"10.0.1.10 nzbget.server01.lan\",\"10.0.1.10 auth.server01.lan\" \
            --open-hosts 10.0.1.10  \
            \"$cmd\""
else
    logfile=$(mktemp)
    echo "logfile: $logfile"
    flock -x $OPENVPN_CONFIG -c "$_VOPONO \
        -v \
        -A \
            exec \
            --disable-ipv6 \
            --interface $INTERFACE \
            --custom $OPENVPN_CONFIG \
            --protocol openvpn \
            --hosts \"10.0.1.10 jdownloader.server01.lan\",\"10.0.1.10 vaultwarden.server01.lan\",\"10.0.1.10 webdav.server01.lan\",\"10.0.1.10 nzbget.server01.lan\",\"10.0.1.10 auth.server01.lan\" \
            --open-hosts 10.0.1.10  \
            \"$cmd\" \
        >$logfile 2>&1" \
        & disown

    echo "Create vpn with $OPENVPN_CONFIG..."
    ( tail -f -n0 $logfile & ) | grep -q "Application $cmd"
fi
